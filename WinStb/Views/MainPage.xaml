<Page
    x:Class="WinStb.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <NavigationView x:Name="NavView"
                        IsBackButtonVisible="Collapsed"
                        SelectionChanged="NavView_SelectionChanged"
                        Header="WinStb - Stalker Portal Player">
            <NavigationView.MenuItems>
                <NavigationViewItem Icon="Contact" Content="Profiles" Tag="Profiles" />
                <NavigationViewItem Icon="Video" Content="Live TV" Tag="LiveTV" />
                <NavigationViewItem Icon="Library" Content="VOD" Tag="VOD" />
            </NavigationView.MenuItems>

            <Grid>
                <Frame x:Name="ContentFrame" />
            </Grid>
        </NavigationView>
    </Grid>
</Page>
