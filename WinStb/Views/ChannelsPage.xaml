<Page
    x:Class="WinStb.Views.ChannelsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:WinStb.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Categories/Genres Sidebar -->
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Margin="0,0,20,0">
            <TextBlock Text="Categories" FontWeight="Bold" FontSize="18" Margin="0,0,0,10"/>
            <ListView ItemsSource="{x:Bind LocalViewModel.Genres, Mode=OneWay}"
                      SelectedItem="{x:Bind LocalViewModel.SelectedGenre, Mode=TwoWay}"
                      SelectionChanged="Genre_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:Genre">
                        <TextBlock Text="{x:Bind Title}" Padding="10,5"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

        <!-- Content Area -->
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,20">
            <Button Content="Refresh" Click="Refresh_Click"/>
        </StackPanel>

        <!-- Live TV Channels - Simple List -->
        <ListView Grid.Row="1" Grid.Column="1"
                  x:Name="LiveTVGrid"
                  ItemsSource="{x:Bind LocalViewModel.Channels, Mode=OneWay}"
                  ItemClick="Channel_Click"
                  IsItemClickEnabled="True"
                  SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:Channel">
                    <StackPanel Orientation="Horizontal" Padding="10,8">
                        <TextBlock Text="{x:Bind Number}"
                                   Width="60"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{x:Bind Name}"
                                   FontSize="14"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- VOD Items - Simple List -->
        <ListView Grid.Row="1" Grid.Column="1"
                  x:Name="VODGrid"
                  ItemsSource="{x:Bind LocalViewModel.VodItems, Mode=OneWay}"
                  ItemClick="VodItem_Click"
                  IsItemClickEnabled="True"
                  SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:VodItem">
                    <StackPanel Padding="10,8">
                        <TextBlock Text="{x:Bind Name}"
                                   FontSize="14"
                                   FontWeight="SemiBold"/>
                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,4,0,0">
                            <TextBlock Text="{x:Bind Year}" FontSize="12" Opacity="0.7"/>
                            <TextBlock Text="{x:Bind Rating}" FontSize="12" Opacity="0.7"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ProgressRing Grid.Row="1" Grid.Column="1"
                      IsActive="{x:Bind LocalViewModel.IsLoading, Mode=OneWay}"
                      Width="50" Height="50"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
    </Grid>
</Page>
